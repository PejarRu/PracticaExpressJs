{% extends "publico_base.njk" %}

{% block title %}Búsqueda de juegos{% endblock %}

{% block contenido %}
    <form action="/buscar" method="get">
        <div class="form-group row m-4">
            <label for="search" class="col-12">Buscar juego:</label>
            <input type="text" class="form-control col-8" id="search" name="search" value="{{busqueda | default('')}}">
            <button type="submit" class="btn btn-primary ml-4 col-2">Buscar</button>
            <a href="/" class="btn btn-link ml-4">Mostrar todos</a>

        </div>
    </form>
    <h2>Resultados de la búsqueda</h2>
    {% if juegos %}
        <ul>
            {% for juego in juegos %}
                <li>
                    <a href="/juego/{{ juego._id }}">{{ juego.nombre }}</a>
                </li>
            {% endfor %}
        </ul>
        {%else%}
        <p>{{ mensaje | default('') }}</p>
    {% endif %}
{% endblock %}